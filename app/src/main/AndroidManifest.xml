<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brainquiz">

    <application
        android:allowBackup="true"
        android:icon="@drawable/brain_ic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BrainQuiz">
        <activity android:name=".activities.ColorMatcherResultsActivity"></activity>
        <activity android:name=".activities.ColorMatcherActivity" />
        <activity android:name=".activities.MathRiddlesResultsActivity" />
        <activity android:name=".activities.CountDownActivity" />
        <activity
            android:name=".activities.WinScreenVisualMemoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.IntermediateVisualMemoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.VisualMemoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MathRiddlesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.FailScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LastStateRiddlesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LeaderboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LastStateNumMemoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.NumberMemoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.NumberMemorySecActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>