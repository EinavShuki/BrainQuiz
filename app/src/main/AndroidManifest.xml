<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.example.brainquiz">

    <application
        android:allowBackup="true"
        android:fontFamily="@font/varela_round_regular"
        android:icon="@drawable/brain_ic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BrainQuiz">
        <activity android:name=".activities.VisualMemoryResultsActivity"></activity>
        <activity
            android:name=".activities.ColorMatcherResultsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ColorMatcherActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MathRiddlesResultsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CountDownActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.WinScreenVisualMemoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.VisualMemoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MathRiddlesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.FailScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LastStateNumMemoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DigitsMemoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DigitsMemoryAnswerActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <dist:module dist:instant="true" />

</manifest>