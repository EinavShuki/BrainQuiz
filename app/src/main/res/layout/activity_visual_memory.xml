<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    android:id="@+id/main_layout"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.appcompat.widget.Toolbar
            android:fontFamily="@font/varela_round_regular"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/level_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_level"
            android:fitsSystemWindows="true"
            android:gravity="center_vertical"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:theme="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
            app:title="@string/level"
            app:titleTextColor="@color/white"
            android:padding="10dp"
            >
            <ImageButton
                android:id="@+id/volume_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/volume_off"
                android:background="@null"
                android:layout_marginStart="255dp"
                />

        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <Button
            android:fontFamily="@font/varela_round_regular"
            android:id="@+id/go"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/got_it_btn"
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:text="@string/go"
            android:textSize="30sp"
            android:textStyle="bold"
            />

    <ImageView
        android:alpha="0.7"
        android:layout_margin="20dp"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:src="@drawable/count"
        android:scaleType="fitXY"
        android:background="@null"
        android:id="@+id/animation_img_view"
        android:translationY="90dp"
        android:visibility="gone"
        />

    <GridLayout
        android:id="@+id/grid_lo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:columnCount="4"
        >
        <ImageButton
            android:visibility="gone"
            android:id="@+id/zero_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/zero"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_margin="8dp"
            />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/one_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/one_min"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_margin="8dp"
            />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/two_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ttwo"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_margin="8dp"
            />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/three_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tthree"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_margin="8dp"
            />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/four_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/four"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_margin="8dp"
            />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/five_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/five"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_margin="8dp"
            />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/six_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/six"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_margin="8dp"
            />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/seven_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/seven"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_margin="8dp"
            />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/eight_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/eight"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_margin="8dp"
            />

        <ImageButton
            android:visibility="gone"
            android:id="@+id/nine_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/nine"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_margin="8dp"
            />

    </GridLayout>
></RelativeLayout>
</LinearLayout>