<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.appcompat.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/level_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_level"
            android:fitsSystemWindows="true"
            android:fontFamily="@font/varela_round_regular"
            android:gravity="center"
            android:padding="10dp"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:theme="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
            app:title="@string/level"
            app:titleTextColor="@color/white" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/game_life"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:visibility="invisible"
            android:id="@+id/life_one"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/life_two"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/heart" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/life_three"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/heart" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <Button
            android:id="@+id/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/got_it_btn"
            android:fontFamily="@font/varela_round_regular"
            android:padding="20dp"
            android:text="@string/go"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/animation_img_view"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_margin="20dp"
            android:alpha="0.7"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/count"
            android:translationY="90dp"
            android:visibility="gone" />

        <GridLayout
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:paddingTop="80dp"
            android:paddingBottom="140dp"
            android:id="@+id/grid_lo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:columnCount="4"
            android:rowCount="5"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/zero_card"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/zero"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/one_card"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/one_min"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/two_card"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ttwo"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/three_card"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/tthree"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/four_card"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/four"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/five_card"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/five"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/six_card"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/six"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/seven_card"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/seven"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/eight_card"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/eight"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/nine_card"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/nine"
                android:visibility="gone" />

        </GridLayout>
        >
    </RelativeLayout>
</LinearLayout>